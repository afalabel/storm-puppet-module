# StoRM frontend configuration file
#
# WARNING: This file is auto-generated by puppet!
# WARNING: To change it, edit the file in [templates/etc/storm/frontend-server/storm-frontend-server.conf.erb]
#

# Service settings
fe.port=<%=@port%>
fe.threadpool.threads.number=<%=@threadpool_threads_number%>
fe.threadpool.maxpending=<%=@threadpool_maxpending%>
fe.gsoap.maxpending=<%=@gsoap_maxpending%>

# Log settings
log.filename = /var/log/storm/storm-frontend-server.log
# Allowed values: ERROR, WARN, INFO, DEBUG, DEBUG2.
log.debuglevel=<%=@log_debuglevel%>

# Security settings
security.enable.mapping=<%=@security_enable_mapping%>
security.enable.vomscheck=<%=@security_enable_vomscheck%>

# Backend information
be.xmlrpc.host=<%=@be_xmlrpc_host%>
be.xmlrpc.token=<%=@be_xmlrpc_token%>
be.xmlrpc.port=<%=@be_xmlrpc_port%>
be.xmlrpc.path=<%=@be_xmlrpc_path%>

# default is 9998
be.recalltable.port=<%=@be_recalltable_port%>

# Database
db.host=<%=@db_host%>
db.user=<%=@db_user%>
db.passwd=<%=@db_passwd%>

# Argus Blacklisting
check.user.blacklisting=<%=@check_user_blacklisting%>
<% if @check_user_blacklisting %>
argus-pepd-endpoint=<%=@argus_pepd_endpoint%>
<% else %>
#argus-pepd-endpoint=
<% end %>

# Monitoring
monitoring.enabled=<%=@monitoring_enabled%>
<% if @monitoring_enabled %>
monitoring.timeInterval=<%=@monitoring_time_interval%>
monitoring.detailed=<%=@monitoring_detailed%>
<% else %>
#monitoring.timeInterval=60
#monitoring.detailed=false
<% end %>

# WSDL to be returned to a GET request
wsdl.file = /usr/share/wsdl/srm.v2.2.wsdl
