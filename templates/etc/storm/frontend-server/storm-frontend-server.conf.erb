# StoRM frontend configuration file
#
# WARNING: This file is auto-generated by puppet!
# WARNING: To change it, edit the file in [templates/etc/storm/frontend-server/storm-frontend-server.conf.erb]
#

# Service settings
fe.port=<%=scope['storm::frontend::port']%>
fe.threadpool.threads.number=<%=scope['storm::frontend::threadpool_threads_number']%>
fe.threadpool.maxpending=<%=scope['storm::frontend::threadpool_maxpending']%>
fe.gsoap.maxpending=<%=scope['storm::frontend::gsoap_maxpending']%>

# Log settings
log.filename = /var/log/storm/storm-frontend-server.log
# Allowed values: ERROR, WARN, INFO, DEBUG, DEBUG2.
log.debuglevel=<%=scope['storm::frontend::log_debuglevel']%>

# Security settings
security.enable.mapping=<%=scope['storm::frontend::security_enable_mapping']%>
security.enable.vomscheck=<%=scope['storm::frontend::security_enable_vomscheck']%>

# Backend information
be.xmlrpc.host=<%=scope['storm::frontend::be_xmlrpc_host']%>
be.xmlrpc.token=<%=scope['storm::frontend::be_xmlrpc_token']%>
be.xmlrpc.port=<%=scope['storm::frontend::be_xmlrpc_port']%>
be.xmlrpc.path=<%=scope['storm::frontend::be_xmlrpc_path']%>

# default is 9998
be.recalltable.port=<%=scope['storm::frontend::be_recalltable_port']%>

# Database
db.host=<%=scope['storm::frontend::db_host']%>
db.user=<%=scope['storm::frontend::db_user']%>
db.passwd=<%=scope['storm::frontend::db_passwd']%>

# Argus Blacklisting
check.user.blacklisting=<%=scope['storm::frontend::check_user_blacklisting']%>
<% if scope['storm::frontend::check_user_blacklisting'] %>
argus-pepd-endpoint=<%=scope['storm::frontend::argus_pepd_endpoint']%>
<% else %>
#argus-pepd-endpoint=
<% end %>

# Monitoring
monitoring.enabled=<%=scope['storm::frontend::monitoring_enabled']%>
<% if scope['storm::frontend::monitoring_enabled'] %>
monitoring.timeInterval=<%=scope['storm::frontend::monitoring_time_interval']%>
monitoring.detailed=<%=scope['storm::frontend::monitoring_detailed']%>
<% else %>
#monitoring.timeInterval=60
#monitoring.detailed=false
<% end %>

# WSDL to be returned to a GET request
wsdl.file = @datadir@/wsdl/srm.v2.2.wsdl
